<resources>
    <color name="no_content_text_color">#ffffff</color>

    <!-- Keep transparent to reveal what is behind the transparent areas of the album art. -->
    <color name="album_art_background">#0000</color>

    <!-- Color displayed behind the transport controls while browsing -->
    <color name="browse_playback_bg_color">@color/car_dark_blue_grey_700</color>
    <!-- Color displayed behind the mini control bar -->
    <color name="browse_mini_control_bar_bg">@color/car_grey_972</color>
    <!-- Color of new content indicator in browse view -->
    <color name="browse_progress_new_indicator_color">@color/car_green_700</color>
    <!-- Color used on the progress bar background -->
    <color name="progress_bar_background">@color/car_grey_700</color>
    <!-- Color used on the progress bar -->
    <color name="progress_bar_highlight">@color/media_source_default_color</color>
    <!-- Color used on the thumb of the progress bar -->
    <color name="progress_bar_thumb_color">@color/media_source_default_color</color>

    <!-- appbar_view.xml -->
    <color name="appbar_view_icon_tint">@color/primary_app_icon_color</color>
    <color name="appbar_view_settings_tint">@color/uxr_button_image_color_selector</color>
    <color name="search_hint_text_color">#33FFFFFF</color>

    <!-- fragment_metadata.xml -->
    <color name="queue_playing_icon_color">@color/icon_tint</color>

    <!-- Color used for the search bar underline -->
    <color name="search_bar_underline_color">@android:color/white</color>

    <!--  Color used to tint the album art icon in media_browse_list_icons_item.xml and
        media_browse_grid_icons_item.xml -->
    <color name="browse_icon_tint">@color/icon_tint</color>

</resources>
