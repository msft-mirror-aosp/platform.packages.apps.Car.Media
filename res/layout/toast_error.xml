<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toast_error_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/toast_error_icon"
        android:layout_width="@dimen/toast_error_icon_size"
        android:layout_height="@dimen/toast_error_icon_size"
        android:scaleType="centerCrop"
        style="@style/ToastErrorIconStyle"/>

    <TextView
        android:id="@+id/toast_error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ToastErrorTextStyle"
        android:layout_marginStart="@dimen/toast_error_text_margin_start"
        android:includeFontPadding="false"/>
</LinearLayout>